<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ChalkTheme" parent="android:style/Theme.Light">
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <style name="TitleBar">
        <item name="android:id">@+id/title_container</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">0dip</item>
        <!-- <item name="android:background">@color/title_background</item> -->
        <item name="android:background">@drawable/bg_title_bar_2</item>
    </style>
    
    <style name="TitleBarSeparator">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/bg_title_bar_separator</item>
    </style>

    <style name="TitleBarText">
        <item name="android:id">@+id/title_text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/title_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleBarButton">
        <item name="android:textColor">@color/title_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/title_button</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingLeft">10dip</item>
    </style>
    
    <style name="TitleBarButton2" parent="android:style/Widget.Button">
    	<item name="android:layout_width">wrap_content</item>
    	<item name="android:layout_height">32dp</item>
    	<item name="android:textStyle">bold</item>
    	<item name="android:paddingTop">6dip</item>
    	<item name="android:layout_marginRight">5dip</item>
    	<item name="android:background">@drawable/button_titlebar</item>
    </style>
    
    <style name="NoteTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">@android:color/primary_text_light</item>
    </style>
    
    <style name="NoteBody">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>
    
    <style name="NoteDate">
    	<item name="android:textSize">@dimen/text_size_smaller</item>
    	<item name="android:textColor">@android:color/secondary_text_light</item>
    	<item name="android:paddingTop">2dip</item>
    </style>
    
    <style name="NoteTag">
    	<item name="android:textSize">@dimen/text_size_super_small</item>
    	<item name="android:textColor">@android:color/secondary_text_light</item>
    	<item name="android:paddingLeft">4dip</item>
    	<item name="android:paddingRight">4dip</item>
    </style>
    
    <style name="NoteTag.Blue" parent="NoteTag">
    	<item name="android:background">@drawable/bg_tag_blue</item>
    	<item name="android:textColor">#ffffff</item>
    </style>

    <style name="ListItem">
        <item name="android:minHeight">?android:attr/listPreferredItemHeight</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:paddingTop">8dip</item>
        <item name="android:paddingBottom">8dip</item>
    </style>
    
</resources>
